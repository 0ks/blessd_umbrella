<h1 class="title has-text-centered"><%= gettext("Listing Users") %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= gettext("Name") %></th>
      <th><%= gettext("Email") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for user <- @users do %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>

      <td>
        <div class="field has-addons is-pulled-right">
          <div class="control">
            <%= link gettext("Edit"),
              to: user_path(@conn, :edit, @current_church.identifier, user),
              class: "button is-small" %>
          </div>
          <div class="control">
            <%= link gettext("Delete"),
              to: user_path(@conn, :delete, @current_church.identifier, user),
              method: :delete,
              data: [confirm: gettext("Are you sure?")],
              class: "button is-danger is-small" %>
          </div>
        </div>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

