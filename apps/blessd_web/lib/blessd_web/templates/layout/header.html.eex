<%
  user = @conn.assigns[:current_user]
  church = if user, do: user.church, else: nil
%>
<nav class="navbar">
  <div class="navbar-brand">
    <% home_path = if church do
      person_path(@conn, :index, church.identifier)
    else
      page_path(@conn, :index)
    end %>
    <%= link to: home_path,
      class: "navbar-item",
      tabindex: -1 do %>
      <img src="<%= static_url(@conn, "/images/cross.png") %>"></img>
    <% end %>
    <div class="navbar-burger burger" data-target="navMenu">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
  <div id="navMenu" class="navbar-menu">
    <%= if church do %>
      <div class="navbar-start">
        <%= link gettext("People"),
          to: person_path(@conn, :index, church.identifier),
          class: "navbar-item",
          tabindex: -1 %>

        <%= link gettext("Services"),
          to: service_path(@conn, :index, church.identifier),
          class: "navbar-item",
          tabindex: -1 %>
      </div>
      <div class="navbar-end">
				<div class="navbar-item has-dropdown is-hoverable">
          <div class="navbar-link">
            <img src="<%= gravatar_url(user) %>" class="header-user-avatar"/>
            <%= user.name %>
          </div>
          <div class="navbar-dropdown is-boxed navbar-dropdown-right">
            <%= link gettext("Profile"),
              to: user_path(@conn, :edit, church.identifier, user),
              class: "navbar-item",
              tabindex: -1 %>
            <div class="navbar-divider"></div>
            <%= link gettext("Users"),
              to: user_path(@conn, :index, church.identifier),
              class: "navbar-item",
              tabindex: -1 %>
            <%= link gettext("Config"),
              to: church_path(@conn, :edit, church.identifier),
              class: "navbar-item",
              tabindex: -1 %>
            <%= link gettext("Signout"),
              to: session_path(@conn, :delete, church.identifier),
              method: :delete,
              class: "navbar-item",
              tabindex: -1 %>
          </div>
        </div>

      </div>
    <% else %>
      <div class="navbar-end">
        <%= link gettext("Signup"),
          to: signup_path(@conn, :new),
          class: "navbar-item",
          tabindex: -1 %>
        <%= link gettext("Signin"),
          to: session_path(@conn, :new),
          class: "navbar-item",
          tabindex: -1 %>
      </div>
    <% end %>
  </div>
</nav>
