<h1 class="title has-text-centered"><%= gettext("Listing Meetings") %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= gettext("Date") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for meeting <- @meetings do %>
    <tr>
      <td><%= humanize(meeting.date) %></td>

      <td>
        <div class="field has-addons is-pulled-right">
          <div class="control">
            <%= link gettext("Attendance"),
              to: Routes.meeting_attendance_path(@conn, :index, @current_user.church.identifier, meeting),
              class: "button is-small" %>
          </div>
          <div class="control">
            <%= link gettext("Edit"),
              to: Routes.meeting_path(@conn, :edit, @current_user.church.identifier, meeting),
              class: "button is-small" %>
          </div>
          <div class="control">
            <%= link gettext("Delete"),
              to: Routes.meeting_path(@conn, :delete, @current_user.church.identifier, meeting),
              method: :delete,
              data: [confirm: gettext("Are you sure?")],
              class: "button is-danger is-small" %>
          </div>
        </div>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link gettext("New Meeting"), to: Routes.meeting_path(@conn, :new, @current_user.church.identifier), class: "button is-primary" %>
